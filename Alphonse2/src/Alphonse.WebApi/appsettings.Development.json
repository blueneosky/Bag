{
  "NLog":{
    "variables": {
      "logDir": "./.debug-data",
      "logFile": "${logDir}/Alphonse.WebApi.log"
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Debug",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  },
  "Alphonse":{
    "ListenPort": 6102,
    "DataDirPath":"./.debug-data",
    "DbPath":"./Alphonse.db",
    "WithKestrelConnectionLogging":true
  }
}
