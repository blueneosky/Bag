{
  "Logging": {},
  "NLog": {
    "throwConfigExceptions": true,
    "variables": {
      "logDir": "/var/log",
      "logFile": "${logDir}/Alphonse.WebApi.log"
    },
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${logFile}",
        "archiveFileName": "${logFile}.{#####}",
        "archiveAboveSize": 10240000
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  },
  "AllowedHosts": "localhost;127.0.0.1;::1",
  "Alphonse": {
    "ListenPort": 6101,
    "DataBasePath": "/var/lib/alphonse",
    "DbPath": "./Alphonse.db"
  }
}