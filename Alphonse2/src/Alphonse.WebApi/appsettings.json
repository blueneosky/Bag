{
  "AllowedHosts": "localhost;127.0.0.1;::1",
  "Alphonse": {
    "ListenPort": 6101,
    "JwtSecretKey": "",
    "JwtIssuer": "",
    "JwtAudience": "",
    "DataDirPath": "/var/lib/alphonse",
    "DbPath": "./Alphonse.db",
    "AnonymousUserRights": ["UserSelfCreate"],
    "FallbackAdminUserName": "root",
    "FallbackAdminUserPass": "root",
    "AlphonseListenerUserName": "__alphonse__",
    "AlphonseListenerUserPass": "e57b466a-dd56-4aa5-8854-cd773ff81da3",
    "ForceSwagger": false
  },
  "Logging": {},
  "NLog": {
    "throwConfigExceptions": true,
    "variables": {
      "logDir": "/var/log",
      "logFile": "${logDir}/Alphonse.WebApi.log"
    },
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${logFile}"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}