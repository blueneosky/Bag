{
  "Alphonse": {
    "ModemPort": "",
    "ResetTime": "03:00:00"
  },
  "Logging": {},
  "NLog": {
    "throwConfigExceptions": true,
    "variables": {
      "logDir": "/var/log",
      "logFile": "${logDir}/alphonse.listener.log"
    },
    "targets": {
      "async": true,
      "logfile": {
        "type": "File",
        "fileName": "${logFile}",
        "archiveFileName": "${logFile}.{#####}",
        "archiveAboveSize": 10240000
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "Microsoft.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logfile"
      }
    ]
  }
}